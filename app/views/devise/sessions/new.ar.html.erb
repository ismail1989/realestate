<div class="row" dir="rtl">
  <div class="col-lg-6" style="margin: auto;float: none;">
    <div class="well bs-component" style="margin-top: 20%;">
        
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal')  do |f| %>
      <%= devise_error_messages!%>
        <fieldset>
          <legend>تسجيل الدخول</legend>
          
          <div class="form-group">
            
            <div class="col-lg-10">
              <%= f.email_field :email, class: 'form-control', id: 'inputEmail', placeholder: 'البريد الإلكتروني', autofocus: true %><br/>
            </div>
            <label for="inputEmail" class="col-lg-2 control-label">البريد الإلكتروني</label>
          </div>

          <div class="form-group">
            
            <div class="col-lg-10">
              <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "كلمة السر", autocomplete: "off" %>
              
            </div>
            <label for="inputPassword" class="col-lg-2 control-label">كلمة السر</label>
          </div>
          &nbsp;&nbsp;
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit "تسجيل الدخول", class: "btn btn-primary" %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </fieldset>
        <%end%>
    </div>
  </div>
</div>
