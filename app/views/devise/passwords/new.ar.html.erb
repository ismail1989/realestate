<div class="row" dir="rtl">
  <div class="col-lg-6" style="margin: auto;float: none;">
    <div class="well bs-component" style="margin-top: 20%;">
        
     <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
        <fieldset>
          <legend>هل نسيت كلمة المرور؟</legend>
          
          <div class="form-group">
            
            <div class="col-lg-10">
                <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "البريد الإلكتروني" %>
              
            </div>
            <label for="inputEmail" class="col-lg-2 control-label">البريد الإلكتروني</label>
          </div>
          <br><br>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit "أرسل كلمة المرور الجديدة", class: "btn btn-primary" %>
            </div>
          </div>
         
          
             
            
            
        </fieldset>
        <%end%>
        <%= render "devise/shared/links" %>
    </div>
      
  </div>
</div>