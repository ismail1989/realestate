<div class="row">
  <div class="col-lg-12">
    <div class="well bs-component">
    <% @tag_name = TagName.new%>
      <%= form_for(@tag_name, remote:true) do |form| %>
      <fieldset>
        <div class="form-group">
          <label class="control-label">Name</label>
            <%= form.text_field :name, class: 'form-control', placeholder: 'Name', autofocus: true%>
        </div>

        <div class="form-group">
          <%= form.button :class => "btn btn-primary", style: 'width:33%;float:right;', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>In progress...."} %>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>
</div>
