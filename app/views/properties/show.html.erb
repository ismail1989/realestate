<style type="text/css">
  .thumb{
    width: 100px;
    border-radius: 10px;
  }
</style>
<div class="container">
  <div class="container-fluid">
    <div class="row">
      <div class="well bs-component">
        <fieldset>
        <div class="col-lg-12">
          <div class="col-lg-6">
        <p>
          <strong>Country:</strong>
          <%= @property.country %>
        </p>

        <p>
          <strong>Province:</strong>
          <%= @property.province %>
        </p>

        <p>
          <strong>City:</strong>
          <%= @property.city %>
        </p>

        <p>
          <strong>Address:</strong>                               
          <%= @property.address %>
        </p>

        <p>
          <strong>Holding type:</strong>
          <%= @property.holding_type %>
        </p>

        <p>
          <strong>Project name:</strong>
          <%= @property.project_name %>
        </p>

        <p>
          <strong>Project code:</strong>
          <%= @property.project_code %>
        </p>

        <p>
          <strong>Property name:</strong>
          <%= @property.property_name %>
        </p>

        <p>
          <strong>Property code:</strong>
          <%= @property.property_code %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @property.description %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @property.price %>
        </p>

        <p>
          <strong>Facilities:</strong>
          <%@property.facilities.each do |facility| %>
          <span class="badge"><%= facility%></span>
          <%end%>
        </p>

        <p>
          <strong>Featured:</strong>
          <%= @property.featured %>
        </p>
        </div>


        <div class="col-lg-6">

        <p>
          <strong>Main photo:</strong>
          <%= image_tag @property.main_photo_url, class: 'thumb' %>
        </p>

        <p>
          <strong>Cover photo:</strong>
          <%= image_tag(@property.cover_photo.url, class: 'thumb') if @property.cover_photo?  %>
        </p>

        <p>
          <strong>Gallery photos:</strong>
          <% @property.gallery_photos.each do |file| %>
          <%= image_tag file.url, class: 'thumb'%>
          <%end%>
        </p>

        <p>
          <strong>Floor plan photos:</strong>
          <% @property.floor_plan_photos.each do |file| %>
          <%= image_tag file.url, class: 'thumb'%>
          <%end%>
        </p>

        <%= link_to 'Edit', edit_property_path(@property), class: 'btn btn-primary btn-sm' %> |
        <%= link_to 'Back', property_admin_index_path, class: 'btn btn-success btn-sm' %>
        </div>
        </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>