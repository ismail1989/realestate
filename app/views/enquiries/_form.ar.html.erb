<% @enquiry = Enquiry.new%>
<div class="well bs-component">
<%= form_for(@enquiry, remote: true) do |f|%>
<div class="form-group">
  <label class="control-label">الإسم الكامل</label>
  <%= f.text_field :name, class: "form-control", placeholder: 'الإسم هنا' %>
</div>

<div class="form-group">
  <label class="control-label">رقم الموبايل</label>
 	<%= f.text_field :mobile, class: "form-control", placeholder: 'الرقم هنا' %>
</div>

<div class="form-group">
  <%= f.button 'إرسال', :class => 'btn btn-primary' %>
</div>
<%end%>
</div>