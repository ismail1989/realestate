<style type="text/css">
  .panel_override {
    background-color: rgba(40, 108, 140, 0.34)!important; 
  }
  .panel-primary{
  	border-color: rgba(40, 108, 140, 0.34);
  }
  .h1-class {
    font-size: 60px;
    margin-bottom:-10px;
    margin-top: 30px;
  }
  .value-class {
    float: left;
    color: #000;
    margin-left: 9px;
    margin-top: -10px;
    font-size: 2rem;
  }
  .list-group-item{
    padding:5px;
  }
  .h4-class{
    font-size: 30px;
    margin-bottom:-10px;
  }
  .list-class{
    padding-left: 15px;
    padding-right: 15px;
    padding-bottom: 20.5px;
    padding-top: 0px;
  }
  .div-count{
    float: right;
    font-size: 13px;
    margin-top: 10px;
  }
  .panel-default > .panel-heading{
    background-color: rgba(40, 108, 140, 0.34);
  }
</style>

<div class="container">
  <div class="col-lg-12">
    <div class="well bs-component">
      <fieldset>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Flats</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @flat_appartments%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= flats_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Luxury</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @luxury_flats%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= luxury_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">House-Villas</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @house_villas%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= house_villas_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Lands</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @lands%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= lands_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Other Holdings</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @other_holdings%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= other_holdings_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
      </fieldset>
    </div>

    <div class="well bs-component">
      <fieldset>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Blogs</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @blogs%></h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">News</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @news%></h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </fieldset>
    </div>

    <div class="well bs-component">
      <fieldset>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Applicants</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @enquiries%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= enquiries_index_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
      </fieldset>
    </div>

    <div class="well bs-component", id="empolyeeForm">
      <fieldset>
      	<%= link_to 'Create employee', new_employee_admin_index_path, class: 'btn btn-primary custom', remote: true %>
          <table class="table table-striped table-bordered dt-responsive nowrap myTable">
            <thead>
	          <tr>
	            <th>Email</th>
	            <th>Role</th>
                <th>Status</th>
	            <th>Actions</th>
	          </tr>
	        </thead>

	        <tbody>
            <% @users.each do |user|%>
	            <tr>
	              <td><%= user.email%></td>
	              <td><%= user.role.name%></td>
                  <% if user.is_active == true%>
                  <td>Active</td>
                  <%else%>
                  <td>Deactive</td>
                  <%end%>
	              <td><%= link_to 'Edit', edit_user_registration_path(user_id: user), :data => { :turbolinks => false } %>
                    <%= link_to 'Destroy', user_registration_path(user_id: user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	            </tr>
            <%end%>
	        </tbody>
	      </table>
      </fieldset>
    </div>

  </div>
</div>
