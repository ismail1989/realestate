<style type="text/css">
  .panel_override {
    background-color: rgba(40, 108, 140, 0.34)!important; 
  }
  .panel-primary{
  	border-color: rgba(40, 108, 140, 0.34);
  }
  .h1-class {
    font-size: 60px;
    margin-bottom:-10px;
    margin-top: 30px;
  }
  .value-class {
    float: left;
    color: #000;
    margin-left: 9px;
    margin-top: -10px;
    font-size: 2rem;
  }
  .list-group-item{
    padding:5px;
  }
  .h4-class{
    font-size: 30px;
    margin-bottom:-10px;
  }
  .list-class{
    padding-left: 15px;
    padding-right: 15px;
    padding-bottom: 20.5px;
    padding-top: 0px;
  }
  .div-count{
    float: right;
    font-size: 13px;
    margin-top: 10px;
  }
  .panel-default > .panel-heading{
    background-color: rgba(40, 108, 140, 0.34);
  }
</style>

<div class="container">
  <div class="col-lg-12">
    <div class="well bs-component">
      <fieldset>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Blogs</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @blog_count%></h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">News</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @news_count%></h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </fieldset>
    </div>

    <div class="well bs-component">
      <fieldset>
      	<%= link_to 'Create blog', new_blog_path, class: 'btn btn-primary custom' %>
        <table class="table table-striped table-bordered dt-responsive nowrap myTable">
        <thead>
          <tr>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Tags</th>
            <th>Share</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= blog.title %></td>
              <td><%= blog.subtitle %></td>
              <td><%= blog.tag_list %></td>
              <td><%= blog.share %></td>
              <td><%= link_to 'Show', blog %>
                  <%= link_to 'Edit', edit_blog_path(blog) %>
                  <%= link_to 'Destroy', blog, data: { behavior: 'delete' } %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </fieldset>
    </div>

    <div class="well bs-component">
      <fieldset>
        <%= link_to 'Create news', new_news_path, class: 'btn btn-primary custom' %>
        <table class="table table-striped table-bordered dt-responsive nowrap myTable">
        <thead>
          <tr>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Tag list</th>
            <th>Keywords</th>
            <th>Meta description</th>
            <th>Source</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @news.each do |news| %>
            <tr>
              <td><%= news.title %></td>
              <td><%= news.subtitle %></td>
              <td><%= news.tag_list %></td>
              <td><%= news.keywords %></td>
              <td><%= news.meta_description %></td>
              <td><%= news.source %></td>
              <td><%= link_to 'Show', news %>
                 <%= link_to 'Edit', edit_news_path(news) %>
                 <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </fieldset>
    </div>

  </div>
</div>
<!-- /.row -->