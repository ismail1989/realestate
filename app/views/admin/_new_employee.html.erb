<script type="text/javascript">
  $(document).ready(function(){
    $( ".select2" ).select2();
  });
</script>
  <legend>Create Employee<%= link_to 'Back to list', admin_index_path, class: 'btn btn-primary custom' %></legend>
    <div class="row">
      <div class="col-lg-12">
        <div class="well bs-component">
        <%= form_for @user, url: create_employee_admin_index_path, html: { method: :post } do |f| %>
            <%= devise_error_messages! %>
          <fieldset>
            <div class="form-group">
              <label>Email</label>
                <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
            </div>
            <div class="form-group">
              <label for="inputPassword">Password</label>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password", autocomplete: "off" %>
            </div>
            <div class="form-group">
              <label for="inputPasswordConfirmation">Password confirmation</label>
                <%= f.password_field :password_confirmation, class: "form-control", id: "inputPasswordConfirmation", placeholder: "Password confirmation", autocomplete: "off" %>
            </div>

            <%= f.hidden_field :is_active, value: true%>

            <div class="form-group">
              <label for="select" class="col-lg-2 control-label">Select service</label>
                <%= f.select :role_id, options_for_select(@roles.collect {|role|[role.name.titleize, role.id]}), { prompt: "Select role" }, { class: "form-control", id: "select", :required => true, style: 'width:100%;' }%><br/>
            </div>

            <div class="form-group">
              <div class="actions">
                <%= f.button 'Create', :class => "btn btn-primary", style: 'width:33%;float:right;', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>Please wait...."} %>
              </div>
            </div>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>