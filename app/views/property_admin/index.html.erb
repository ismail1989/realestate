<div class="container">
<div class="col-lg-12">
    <div class="well bs-component">
      <fieldset>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Flats</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @flat_appartments%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= flats_properties_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Luxury</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @luxury_flats%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= luxury_properties_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">House-Villas</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @house_villas%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= house_villas_properties_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Lands</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @lands%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= lands_properties_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Other Holdings</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @other_holdings%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <a data-turbolinks="false", href="<%= other_holdings_properties_properties_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
      </fieldset>
    </div>

    <div class="well bs-component">
      <fieldset>
      	<%= link_to 'Create property', new_properties_property_path, class: 'btn btn-primary custom' %>
        <table class="table table-striped table-bordered dt-responsive nowrap myTable">
        <thead>
          <tr>
            <th>Property name</th>
            <th>Holding type</th>
            <th>Price</th>
            <th>Country</th>
            <th>Featured</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @properties.each do |property| %>
            <tr>
              <td><%= property.property_name %></td>
              <td><%= property.holding_type %></td>
              <td><%= property.price %></td>
              <td><%= property.country %></td>
              <td><%= property.featured %></td>
              <td><%= link_to 'Show', property, :data => { :turbolinks => false } %>
                <%= link_to 'Edit', edit_property_path(property), :data => { :turbolinks => false } %>
                <%= link_to 'Destroy', property, data: { behavior: 'delete' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </fieldset>
    </div>

  </div>
<!-- /.row -->
</div>