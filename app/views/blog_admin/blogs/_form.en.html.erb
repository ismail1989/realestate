<div class="container">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="well bs-component">
        <%= form_for([:blog_admin, @blog]) do |form| %>
            <fieldset>
              <%= render 'errors'%>
                <div class="form-group">
                  <label for="blog_title" class="control-label">Title</label>
                    <%= form.text_field :title, class: 'form-control', id: 'blog_title', placeholder: 'Title', autofocus: true%>
                </div>

                <div class="form-group">
                  <label for="blog_subtitle" class="control-label">Subtitle</label>
                    <%= form.text_field :subtitle, class: 'form-control', id: 'blog_subtitle', placeholder: 'Subtitle', autofocus: true%>
                </div>

                <div class="form-group">
                  <label for="blog_blog_image" class="control-label">Blog image</label>
                    <%= form.file_field :blog_image, title: 'choose blog image', class: 'btn-sm btn-primary', id: 'blog_blog_image'%>
                </div>

                <div class="form-group">
                  <label for="blog_body" class="control-label">Body</label>
                    <%= form.cktext_area :body, class: 'form-control', id: 'blog_body', placeholder: 'Body', autofocus: true%>
                </div>

                <div class="form-group">
                  <label for="blog_tags" class="control-label">Tags</label>
                    <%= form.select :tag_list, options_from_collection_for_select(TagName.all.collect, :name, :name, selected: @blog.tag_list), {:include_blank => "Select tags"},  {id: 'blog_tags', class: "select2", style: 'width:100%;', :required => true, multiple: true} %>
                </div>

                <a href="#" data-toggle="modal" data-target="#myModal">Add Tags</a>

                <div class="form-group">
                  <%= form.button :class => "btn btn-primary", style: 'width:33%;float:right;', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>In progress...."} %>
                </div>
              <% end %>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add tags</h4>
        </div>
        <div class="modal-body">
          <%= render 'tag_names/form'%>
        </div>
      </div>
      
    </div>
  </div>