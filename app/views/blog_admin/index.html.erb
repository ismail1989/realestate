<div class="container">
  <div class="col-lg-12">

<div class="well bs-component">
      <fieldset>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">Blogs</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @blogs.count%></h1>
                            </div>
                        </div>
                    </div>
                </div>
               <!--  <a href="<%#= blog_listing_blogs_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a> -->
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading panel_override">
                    <div class="row">
                        <div class="price">
                            <span class="value value-class">News</span>
                            <div class="col-xs-6 text-center">
                            <h1 class="h1-class"><%= @news.count%></h1>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- <a href="<%#= news_listing_blog_admin_news_index_path%>">
                    <div class="panel-footer" style="background: hsla(225, 36%, 59%, 0.42)">
                        <span class="pull-right" style="color: #000;">View List</span>
                        <div class="clearfix"></div>
                    </div>
                </a> -->
            </div>
        </div>
      </fieldset>
    </div>

    <div class="well bs-component">
      <fieldset>
      	<%= link_to 'Add blog', new_blog_admin_blog_path, class: 'btn btn-primary custom' %>
          <table class="table table-striped table-bordered dt-responsive nowrap myTable">
            <thead>
              <tr>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Tags</th>
                <th>Share</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @blogs.each do |blog| %>
                <tr>
                  <td><%= blog.title %></td>
                  <td><%= blog.subtitle %></td>
                  <td><%= blog.tag_list %></td>
                  <td><%= blog.share %></td>
                  <td><%= link_to 'Show', blog_admin_blog_path(blog) %>
                      <%= link_to 'Edit', edit_blog_admin_blog_path(blog) %>
                      <%= link_to 'Destroy', blog_admin_blog_path(blog), data: { behavior: 'delete' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </fieldset>
    </div>


    <div class="well bs-component">
      <fieldset>
      	<%= link_to 'Add news', new_blog_admin_news_path, class: 'btn btn-primary custom' %>
          <table class="table table-striped table-bordered dt-responsive nowrap myTable">
            <thead>
              <tr>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Tag list</th>
                <th>Keywords</th>
                <th>Source</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @news.each do |news| %>
                <tr>
                  <td><%= news.title %></td>
                  <td><%= news.subtitle %></td>
                  <td><%= news.tag_list %></td>
                  <td><%= news.keywords %></td>
                  <td><%= news.source %></td>
                  <td><%= link_to 'Show', blog_admin_news_path(news) %>
                      <%= link_to 'Edit', edit_blog_admin_news_path(news) %>
                      <%= link_to 'Destroy', blog_admin_news_path(news), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </fieldset>
    </div>

  </div>
</div>